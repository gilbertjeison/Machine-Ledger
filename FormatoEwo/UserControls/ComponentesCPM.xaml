                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="35*"/>
                                            <ColumnDefinition Width="65*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Margin="4"  BorderThickness="1" CornerRadius="5">
