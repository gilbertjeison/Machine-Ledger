                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="BorderBrush" Value="{Binding clase, Converter={StaticResource converter}}"/>
                                                </Style>
                                            </Border.Style>
                                            <Image  Source="{Binding image}" ToolTip="{Binding image_path}" />
                                        </Border>
