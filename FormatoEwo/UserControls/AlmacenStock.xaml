                                                    <TextBlock Text=" salidas)" />                                                    
                                                </TextBlock>
                                            </Expander.Header>
                                            <Expander.Content>
                                                <Border Background="White" Margin="2" CornerRadius="3">
                                                    <ItemsPresenter/>
                                                </Border>
                                            </Expander.Content>
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
